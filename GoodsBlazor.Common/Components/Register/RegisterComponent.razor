<PageTitle>Реєстрація</PageTitle>

<div class="register-container">
    <div class="register-box">
        <h2>Реєстрація</h2>

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <p class="success-message">@_successMessage</p>
        }

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <p class="error-message">@_errorMessage</p>
        }

        <div class="form-group">
            <label>Email:</label>
            <input @bind="_email" type="email" class="form-control" />
        </div>

        <div class="form-group">
            <label>Password:</label>
            <input @bind="_password" type="password" class="form-control" />
        </div>

        <button @onclick="RegisterAsync" class="btn-register" disabled="@_isLoading">
            @(_isLoading ? "Registration..." : "Register")
        </button>

        <p class="login-link">
            Already have an account? <a href="/">Login</a>
        </p>
    </div>
</div>
