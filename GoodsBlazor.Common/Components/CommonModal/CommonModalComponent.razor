@if (IsOpen)
{
    <div class="modal-backdrop" @onclick="CloseModalAsync">
        <div class="modal-content" @onclick:stopPropagation>
            <p class="modal-message">What to do with the image?</p>

            <div class="modal-actions">
                <button class="modal-button" @onclick="OpenInNewTabAsync">Open</button>
                <button class="modal-button delete-btn" @onclick="DeleteImageAsync">Delete</button>
                <button class="modal-button close-btn" @onclick="CloseModalAsync">Close</button>
            </div>
        </div>
    </div>
}