@page "/products"
@using GoodsBlazor.Shared.Dtos
@using GoodsBlazor.Common.Components.ProductList
@using GoodsBlazor.Common.Components.LoadingSpinner

@if (_isLoading)
{
    <LoadingSpinnerComponent IsVisible="_isLoading" />
}
else
{
    <ProductListComponents Products="_productList" IsAdmin="true"
                           OnEdit="EditProduct" OnDelete="DeleteProductAsync" />
}