<PageTitle>Реєстрація</PageTitle>

<div class="register-container">
    <div class="register-box">
        <h2>Реєстрація</h2>

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <p class="success-message">@successMessage</p>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <p class="error-message">@errorMessage</p>
        }

        <div class="form-group">
            <label>Email:</label>
            <input @bind="email" type="email" class="form-control" />
        </div>

        <div class="form-group">
            <label>Пароль:</label>
            <input @bind="password" type="password" class="form-control" />
        </div>

        <button @onclick="Register" class="btn-register" disabled="@isLoading">
            @(isLoading ? "Реєстрація..." : "Зареєструватися")
        </button>

        <p class="login-link">
            Вже маєте акаунт? <a href="/">Ввійти</a>
        </p>
    </div>
</div>
