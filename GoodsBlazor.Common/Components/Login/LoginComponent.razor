@page "/login"
@using GoodsBlazor.Common.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>

<div class="login-container">
    <div class="login-box">
        <h2>Login</h2>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <p class="error-message">@errorMessage</p>
        }

        <div class="form-group">
            <input @bind="email" type="email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group">
            <input @bind="password" type="password" class="form-control" placeholder="Password" />
        </div>

        <button @onclick="Login" class="btn-login">Login</button>

        <p class="register-link">
            Don't have an account yet? <a href="/register">Register</a>
        </p>
    </div>
</div>
